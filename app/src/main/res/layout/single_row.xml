<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="30dp"
    app:cardPreventCornerOverlap="true"
    android:elevation="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/state_name"
                android:layout_width="100dp"
                android:lines="2"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="STATE NAME"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/t_case"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Total Cases"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toStartOf="@+id/active"
                app:layout_constraintTop_toTopOf="@+id/active" />

            <TextView
                android:id="@+id/active"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="25604"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toStartOf="@+id/t_recover"
                app:layout_constraintTop_toTopOf="@+id/t_recover" />

            <TextView
                android:id="@+id/t_recover"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Total Cases"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toStartOf="@+id/t_death"
                app:layout_constraintTop_toTopOf="@+id/t_death" />

            <TextView
                android:id="@+id/t_death"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Total Cases"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>